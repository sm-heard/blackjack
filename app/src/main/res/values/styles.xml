<resources>

  <!-- Base application theme. -->
  <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
    <!-- Customize your theme here. -->
    <item name="colorPrimary">@color/colorPrimary</item>
    <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    <item name="colorAccent">@color/colorAccent</item>
  </style>

  <style name="SoftValue" parent="TextAppearance.AppCompat.Large">
    <item name="android:textColor">#FF000000</item>
    <item name="android:textStyle">normal</item>
    <item name="android:textSize">@dimen/hand_value_size</item>
    <item name="android:includeFontPadding">false</item>
    <item name="android:layout_margin">@dimen/hand_value_margin</item>
  </style>

  <style name="HardValue" parent="SoftValue">
    <item name="android:textStyle">bold</item>
  </style>

  <style name="BustedValue" parent="HardValue">
    <item name="android:textColor">#FFC00000</item>
  </style>

  <style name="BlackjackValue" parent="HardValue">
    <item name="android:textColor">#FF00A000</item>
  </style>

</resources>
